<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AuthTabTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AccountTabTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InputFieldStyle">
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="QuestionInputFieldStyle">
        <item name="android:background">@drawable/bg_question_answer_input</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="AnswerInputFieldStyle">
        <item name="android:background">@drawable/bg_question_answer_input</item>
        <item name="android:gravity">top</item>
        <item name="android:hint">@string/your_answer</item>
        <item name="android:maxLength">300</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:padding">12dp</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="InputErrorStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LoadingDialogStyle" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ConfirmationDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/mint</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/ConfirmationDialogButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/ConfirmationDialogButtonStyle</item>
    </style>
    
    <style name="ConfirmationDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="FloatingActionButtonStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SearchViewTextStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>
</resources>